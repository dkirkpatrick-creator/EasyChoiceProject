<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EasyChoice.CoinFlipPage">
    <StackLayout Margin="10,35,10,10">
        <Label 
               Text="EasyChoice"
               HorizontalOptions="Center"
               FontAttributes="Bold,Italic" FontSize="Large" FontFamily="Palatino Linotype" TextColor="#0093FF" />
        <Label
               Text="Coin Flip"
               HorizontalOptions="Center"
               FontAttributes="Bold" FontSize="50" FontFamily="Palatino Linotype" TextColor="#0093FF" Margin="0,32,0,-60" />
        <FlexLayout
                    Direction="Column"
                    JustifyContent="Center"
                    AlignContent="Center"
                    VerticalOptions="CenterAndExpand">
            <Image Source="coin.png" />
            <Label 
                x:Name="myLabel"
                Text="" />
            <Button Text="Flip the Coin!"
                        Margin="0, 30, 0, 0"
                        Clicked="OnFlipCoinButtonClicked" />
        </FlexLayout>
    </StackLayout>
</ContentPage>