<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EasyChoice.MainPage">
    <StackLayout Margin="10,35,10,10">
        <Label 
               Text="EasyChoice"
               HorizontalOptions="Center"
               FontAttributes="Bold,Italic" FontSize="Large" FontFamily="Palatino Linotype" TextColor="#0093FF" />
        <Label
               Text="Main Menu"
               HorizontalOptions="Center"
               FontAttributes="Bold" FontSize="50" FontFamily="Palatino Linotype" TextColor="#0093FF" Margin="0,32,0,-60" />
        <FlexLayout
                    Direction="Column"
                    JustifyContent="Center"
                    AlignContent="Center"
                    VerticalOptions="CenterAndExpand">
            <Button Text="Flip a Coin"
                        Clicked="OnSaveButtonClicked" />
            <Button Text="Spin a Wheel"
                        Clicked="OnDeleteButtonClicked"/>
        </FlexLayout>
    </StackLayout>
</ContentPage>